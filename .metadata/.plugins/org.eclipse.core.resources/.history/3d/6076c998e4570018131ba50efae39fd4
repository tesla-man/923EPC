#include "msp.h"
#include "uart.h"
#include "delay.h"


void main(void)
{

    P1->DIR |= BIT0;
    P1->OUT |= BIT0;
    float voltage = 50;
    uint8_t color = 5;
    uint8_t i = 0;
    initClock();
    uartInit();

    printf("\033[2J");
    printf("\033[%dm", 30 + color);
    printf("voltage: %.2f", voltage);


    while(1){

        if(i==8){
            i=0;
        }
        printf("\033[2J");
        printf("\033[%dm", 40 + i);
        i++;
        delay_ms(300);
        P1->OUT ^= BIT0;
    }
}




