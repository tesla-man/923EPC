#include "spi.h"
#include "delay.h"
#include "gpio.h"

void spiInit(){

    gpioStruct gpio;

    gpio.port = PORT1;              //initialize spi pins
    gpio.pins = PIN5 | PIN6;
    gpio.type = OUTPUT;
    gpio.af = AF1;
    gpio_init(&gpio);

    gpio.port = PORT2;              //initialize spi pins
    gpio.pins = PIN0;
    gpio.type = OUTPUT;
    gpio_init(&gpio);

    //initialize spi peripheral
    EUSCI_B0->CTLW0 |=  EUSCI_B_CTLW0_SWRST;
    EUSCI_B0->CTLW0 =   EUSCI_B_CTLW0_SWRST    |
                        EUSCI_B_CTLW0_CKPH     |
                        EUSCI_B_CTLW0_MST      |
                        EUSCI_B_CTLW0_SYNC     |
                        EUSCI_B_CTLW0_UCSSEL_2 |
                        EUSCI_B_CTLW0_MSB      ;

    EUSCI_B0->BRW = 0x0003;                          //no bit rate divide
    EUSCI_B0->CTLW0 &= ~EUSCI_B_CTLW0_SWRST;

}

void driveDAC(uint16_t value){
    P2->OUT &= ~BIT0;                                //set CS low
    EUSCI_B0->TXBUF = ((value & 0xF00) | 0x7000)>>8; //send upper 8 bits
    while(!(EUSCI_B0->IFG & EUSCI_B_IFG_TXIFG));     //wait for tx buffer to empty

    EUSCI_B0->TXBUF = (value & 0xFF);                //send lower 8 bits
    while((EUSCI_B0->STATW) & EUSCI_B_STATW_SPI_BUSY); //wait for SPI shift reg
    P2->OUT |= BIT0;                                 //set CS high
}


